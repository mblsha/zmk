/ {
    aliases {
        i2c-0 = &i2c_emul0;
        spi-0 = &spi_emul0;
    };

    /* I2C emulator controller (Zephyr 3.5 binding requires `reg`) */
    i2c_emul0: i2c@0 {
        compatible = "zephyr,i2c-emul-controller";
        reg = <0x0 0x1>;  /* address=0x0, size=0x1 (non-zero size required by validator) */
        clock-frequency = <100000>;  /* Standard I2C frequency (100kHz) */
        #address-cells = <1>;
        #size-cells = <0>;
        status = "okay";

        drv2605_emul: drv2605@5a {
            compatible = "ti,drv2605";
            reg = <0x5a>;
            status = "okay";
        };
    };

    /* SPI emulator controller (mirror the pattern) */
    spi_emul0: spi@0 {
        compatible = "zephyr,spi-emul-controller";
        reg = <0x0 0x1>;  /* address=0x0, size=0x1 (non-zero size required by validator) */
        #address-cells = <1>;
        #size-cells = <0>;
        status = "okay";

        bb_trackpad_emul: bb_trackpad@0 {
            compatible = "blackberry,trackpad";
            reg = <0x0>;
            status = "okay";
        };
    };
};